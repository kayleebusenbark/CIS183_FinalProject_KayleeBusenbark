<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tv_pantry_v_addNewIngredient"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:hint="Select Ingredient..."
        android:textColorHint="@color/black" />

    <EditText

        android:id="@+id/et_pantry_v_quantity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/editbox_background"></EditText>

    <Spinner
        android:id="@+id/sp_pantry_v_measurement"
        android:background="@android:drawable/editbox_background"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"></Spinner>

    <ImageView
        android:id="@+id/iv_pantry_v_removeIngredient"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:clickable="true"
        android:focusable="true"
        app:tint="#FF0000" />

</LinearLayout>